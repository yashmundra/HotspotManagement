<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotspotsmgt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
 <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <application
        android:name="com.example.hotspotsmgt.Global"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.hotspotsmgt.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hotspotsmgt.MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.hotspotsmgt.Register_Activity"
            android:label="@string/title_activity_register_" >
        </activity>
        <activity
            android:name="com.example.hotspotsmgt.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.example.hotspotsmgt.DataUActivity"
            android:label="@string/title_activity_data_u" >
        </activity>
         <activity
            android:name=".AddActivity"
            android:label="HotPots Management"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
